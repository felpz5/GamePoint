import customtkinter as ctk
from tkinter import messagebox, ttk
from datetime import datetime, timedelta
import uuid
import re

# Paleta de cores minimalista
BG_DARK = "#1E1E2F"  # Fundo escuro suave
ACCENT = "#4A90E2"   # Azul acentuado para botões
TEXT = "#E0E0E0"     # Texto claro
CARD_BG = "#2D2D44"   # Fundo dos cards
HOVER = "#5A9DE7"    # Hover dos botões

usuarios = {
    "admin": {"senha": "123", "cargo": "admin"},
    "cliente": {"senha": "1234", "cargo": "cliente"}
}
mesas = [
    {"id": 1, "console": "PS5", "status": "livre", "tempo_inicio": None, "tempo_total": 0},
    {"id": 2, "console": "Xbox", "status": "livre", "tempo_inicio": None, "tempo_total": 0},
    {"id": 3, "console": "Nintendo switch", "status": "livre", "tempo_inicio": None, "tempo_total": 0}
]
consoles = [
    {"id": 1, "tipo": "PS5", "jogos": ["FIFA 23", "God of War"], "manutencao": []},
    {"id": 2, "tipo": "Xbox", "jogos": ["Mortal Kombat", "Forza Horizon"], "manutencao": []},
    {"id": 3, "tipo": "Nintendo switch", "jogos": ["Nintendo Switch Sports"], "manutencao": []}
]
cardapio = [
    {"id": 1, "nome": "Hambúrguer", "preco": 25.00, "tipo": "comida"},
    {"id": 2, "nome": "Refrigerante", "preco": 8.00, "tipo": "bebida"}
]
pedidos = []
reservas = []
pagamentos = []
feedbacks = []

class GameCafeApp(ctk.CTk):
    def __init__(self):
        super().__init__()
        self.title("P.U.P. Cafe")
        self.geometry("900x600")
        self.configure(fg_color=BG_DARK)
        self.resizable(True, True)
        self.usuario_atual = None

        ctk.set_appearance_mode("dark")
        ctk.set_default_color_theme("blue")

        self.criar_tela_principal()

    def limpar_tela(self):
        for widget in self.winfo_children():
            widget.destroy()

    def criar_tela_principal(self):
        self.limpar_tela()
        frame = ctk.CTkFrame(self, fg_color=BG_DARK, corner_radius=15)
        ctk.CTkLabel(frame, text="P.U.P. Cafe", font=ctk.CTkFont(family="Helvetica", size=32, weight="bold"),
                     text_color=ACCENT).pack(pady=30)
        
        btn_ver_mesas = ctk.CTkButton(frame, text="Ver Mesas", width=200, height=40, font=ctk.CTkFont(family="Helvetica", size=14),
                                      fg_color=ACCENT, hover_color=HOVER, corner_radius=8,
                                      command=self.criar_tela_mesas)
        btn_ver_mesas.pack(pady=15)

        if not self.usuario_atual:
            btn_login = ctk.CTkButton(frame, text="Login / Cadastro", width=200, height=40, font=ctk.CTkFont(family="Helvetica", size=14),
                                      fg_color=ACCENT, hover_color=HOVER, corner_radius=8,
                                      command=self.criar_tela_login)
            btn_login.pack(pady=15)
        else:
            btn_perfil = ctk.CTkButton(frame, text="Área do Usuário", width=200, height=40, font=ctk.CTkFont(family="Helvetica", size=14),
                                       fg_color=ACCENT, hover_color=HOVER, corner_radius=8,
                                       command=self.criar_tela_usuario)
            btn_perfil.pack(pady=15)

        btn_sair = ctk.CTkButton(frame, text="Sair", width=150, height=35, font=ctk.CTkFont(family="Helvetica", size=12),
                                 fg_color=ACCENT, hover_color=HOVER, corner_radius=8,
                                 command=self.destroy)
        btn_sair.pack(pady=20)
        frame.pack(expand=True, padx=20, pady=20)

    def criar_tela_login(self):
        self.limpar_tela()
        frame = ctk.CTkFrame(self, fg_color=CARD_BG, corner_radius=15)
        ctk.CTkLabel(frame, text="Login", font=ctk.CTkFont(family="Helvetica", size=24, weight="bold"),
                     text_color=ACCENT).pack(pady=20)
        
        form = ctk.CTkFrame(frame, fg_color="transparent")
        self.entry_usuario = ctk.CTkEntry(form, placeholder_text="Usuário", width=300, height=35,
                                         font=ctk.CTkFont(family="Helvetica", size=12),
                                         fg_color=BG_DARK, text_color=TEXT, border_color=ACCENT)
        self.entry_usuario.pack(pady=10)
        self.entry_senha = ctk.CTkEntry(form, placeholder_text="Senha", show="*", width=300, height=35,
                                       font=ctk.CTkFont(family="Helvetica", size=12),
                                       fg_color=BG_DARK, text_color=TEXT, border_color=ACCENT)
        self.entry_senha.pack(pady=10)
        
        btn_entrar = ctk.CTkButton(form, text="Entrar", width=200, height=40, font=ctk.CTkFont(family="Helvetica", size=14),
                                   fg_color=ACCENT, hover_color=HOVER, corner_radius=8,
                                   command=self.fazer_login)
        btn_entrar.pack(pady=15)
        
        btn_cadastrar = ctk.CTkButton(form, text="Cadastrar", width=200, height=40, font=ctk.CTkFont(family="Helvetica", size=14),
                                      fg_color=ACCENT, hover_color=HOVER, corner_radius=8,
                                      command=self.criar_tela_cadastro)
        btn_cadastrar.pack(pady=10)
        
        btn_voltar = ctk.CTkButton(form, text="Voltar", width=150, height=35, font=ctk.CTkFont(family="Helvetica", size=12),
                                   fg_color=ACCENT, hover_color=HOVER, corner_radius=8,
                                   command=self.criar_tela_principal)
        btn_voltar.pack(pady=15)
        form.pack(pady=10)
        frame.pack(expand=True, padx=20, pady=20)

    def criar_tela_cadastro(self):
        self.limpar_tela()
        frame = ctk.CTkFrame(self, fg_color=CARD_BG, corner_radius=15)
        ctk.CTkLabel(frame, text="Cadastro", font=ctk.CTkFont(family="Helvetica", size=24, weight="bold"),
                     text_color=ACCENT).pack(pady=20)
        
        form = ctk.CTkFrame(frame, fg_color="transparent")
        self.entry_novo_usuario = ctk.CTkEntry(form, placeholder_text="Novo Usuário", width=300, height=35,
                                              font=ctk.CTkFont(family="Helvetica", size=12),
                                              fg_color=BG_DARK, text_color=TEXT, border_color=ACCENT)
        self.entry_novo_usuario.pack(pady=10)
        self.entry_nova_senha = ctk.CTkEntry(form, placeholder_text="Senha", show="*", width=300, height=35,
                                            font=ctk.CTkFont(family="Helvetica", size=12),
                                            fg_color=BG_DARK, text_color=TEXT, border_color=ACCENT)
        self.entry_nova_senha.pack(pady=10)
        self.entry_nova_email = ctk.CTkEntry(form, placeholder_text="Email", width=300, height=35,
                                            font=ctk.CTkFont(family="Helvetica", size=12),
                                            fg_color=BG_DARK, text_color=TEXT, border_color=ACCENT)
        self.entry_nova_email.pack(pady=10)
        self.entry_nova_telefone = ctk.CTkEntry(form, placeholder_text="Telefone", width=300, height=35,
                                               font=ctk.CTkFont(family="Helvetica", size=12),
                                               fg_color=BG_DARK, text_color=TEXT, border_color=ACCENT)
        self.entry_nova_telefone.pack(pady=10)
        
        btn_cadastrar = ctk.CTkButton(form, text="Cadastrar", width=200, height=40, font=ctk.CTkFont(family="Helvetica", size=14),
                                      fg_color=ACCENT, hover_color=HOVER, corner_radius=8,
                                      command=self.cadastrar_usuario)
        btn_cadastrar.pack(pady=15)
        
        btn_voltar = ctk.CTkButton(form, text="Voltar", width=150, height=35, font=ctk.CTkFont(family="Helvetica", size=12),
                                   fg_color=ACCENT, hover_color=HOVER, corner_radius=8,
                                   command=self.criar_tela_login)
        btn_voltar.pack(pady=15)
        form.pack(pady=10)
        frame.pack(expand=True, padx=20, pady=20)

